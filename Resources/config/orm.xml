<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_menu.manager.menu">%black_menu.menu.manager%</parameter>
    </parameters>

    <services>
        <service id="black_menu.entity.manager" alias="doctrine.orm.entity_manager" />

        <service id="black_menu.manager.menu" class="%black_menu.manager.menu%">
            <argument type="service" id="black_menu.entity.manager" />
            <argument>%black_menu.menu.model.class%</argument>
        </service>
    </services>
</container>
