{% extends 'BlackMenuBundle:Menu:base.html.twig' %}

{% set path = path is defined ? path : '' %}

{% block body %}
    <header>
        <h2>Menu Show</h2>
    </header>

    {% if document %}
        <h3>{{ document.name }}</h3>
        <ul>
        {% if document.items|length >= 1 %}
            <li class="dropdown">
                <a href="#" title="Accéder à la partie {{ document.name }}" class="dropdown-toggle" data-toggle="dropdown">
                    <span>{{ document.name }}</span>
                </a>
                <ul class="dropdown-menu">

                    {% for item in document.items %}
                        <li class="{% if path == item.url %}current{% endif %}">
                            <a href="{{ item.url }}" title="{% trans with {'%name%': item.name } from "views" %}menu.www.menu.a.title{% endtrans %}">
                                {{ item.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% else %}
            <li>
                {% for item in document.items %}
                    <a href="{{ item.url }}" title="{% trans with {'%name%': item.name } from "views" %}menu.www.menu.a.title{% endtrans %}">
                        {{ item.name }}
                    </a>
                {% endfor %}
            </li>
        {% endif %}
        </ul>
    {% endif %}

{% endblock %}
