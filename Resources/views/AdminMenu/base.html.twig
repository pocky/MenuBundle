{% extends 'BlackAdminBundle::base.html.twig' %}
{% block body %}

    {% include 'BlackAdminBundle:Admin:header.html.twig' %}
    {% include 'BlackAdminBundle:Admin:sidebar.html.twig' %}
    {% include 'BlackMenuBundle:AdminMenu:sidebar.html.twig' %}

    {% set admin_index = 'admin_menu_index' %}
    {% set admin_delete = 'admin_menu_delete' %}
    {% set admin_edit = 'admin_menu_edit' %}
    {% set admin_new = 'admin_menu_new' %}

    <div id="content">
        {% block content_top %}
            {% include 'BlackAdminBundle:Admin:contentTop.html.twig' with {'title': "black.bundle.menu.adminMenu.base.contentTop.menu.text"} %}
        {% endblock %}
        {% include 'BlackConfigBundle:Admin:breadLine.html.twig' with {
            'route': admin_new,
            'text': "black.bundle.menu.adminMenu.base.breadLine.menu.new.text",
            'a_route': admin_index,
            'a_text': "black.bundle.menu.adminMenu.base.breadLine.menu.breadcrumb.a.text",
            'a_title': "black.bundle.menu.adminMenu.base.breadLine.menu.breadcrumb.a.title"
            }
        %}
        <div class="wrapper">

            {% if form is defined %}
                {% include 'BlackAdminBundle:AdminForm:errors.html.twig' with {'form': form} %}
            {% endif %}
            {% include 'BlackAdminBundle:Admin:flashes.html.twig' with {'flashes': app.session.FlashBag()} %}

            {% block page_content %}{% endblock %}

        </div>
    </div>
{% endblock %}